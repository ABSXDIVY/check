# 项目环境变量配置
# Docker环境变量
NODE_ENV="development"
LOG_LEVEL="info"

# 以太坊节点配置
# 开发模式使用内置开发节点
# 生产环境可切换至真实网络节点
ETHEREUM_NETWORK="development"
ETHEREUM_RPC_URL="http://ethereum-node:8545"

# 合约部署配置
CONTRACT_ADDRESS="0x5FbDB2315678afecb367f032d93F642f64180aa3"
DEPLOYER_PRIVATE_KEY="0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80"

# 服务端口配置
BACKEND_PORT="3001"
FRONTEND_PORT="80"
ETHEREUM_PORT="8545"
ETHEREUM_WS_PORT="8546"

# 性能配置
# 以太坊节点性能限制
ETHEREUM_MEMORY_LIMIT="1G"
ETHEREUM_CPU_LIMIT="1"

# 后端服务性能限制
BACKEND_MEMORY_LIMIT="512M"
BACKEND_CPU_LIMIT="0.5"

# 前端服务性能限制
FRONTEND_MEMORY_LIMIT="256M"
FRONTEND_CPU_LIMIT="0.5"

# 日志配置
# 启用详细日志
ENABLE_VERBOSE_LOGGING="false"
# 日志文件保留天数
LOG_RETENTION_DAYS="7"

# 开发模式特殊配置
# 开发模式允许自动部署合约
AUTO_DEPLOY_CONTRACT="true"
# 开发模式允许重置数据
ALLOW_DATA_RESET="true"

# 安全配置
# 生产环境必须设置复杂密码
DOCKER_COMPOSE_PROJECT_NAME="ethereum-attendance"